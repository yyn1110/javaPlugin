<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.EcuserCustomeractivityDao">

	<!--属性-->
	<parameterMap id="ecuserCustomeractivityParameterMap" type="com.yao.yz.kubauser.persistence.model.EcuserCustomeractivity">
		<parameter property="id"/>
		<parameter property="userName"/>
		<parameter property="activityCode"/>
		<parameter property="addTime"/>
		<parameter property="status"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="ecuserCustomeractivityResultMap" type="com.yao.yz.kubauser.persistence.model.EcuserCustomeractivity">
		<result property="id" column="Id"/>
		<result property="userName" column="UserName"/>
		<result property="activityCode" column="ActivityCode"/>
		<result property="addTime" column="AddTime"/>
		<result property="status" column="Status"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="ecuserCustomeractivityParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into ecuser_customeractivity(`Id`,`UserName`,`ActivityCode`,`AddTime`,`Status`) values(?,?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="ecuserCustomeractivityParameterMap">
		update ecuser_customeractivity set
		<trim suffixOverrides=",">
			<if test="userName != null">
				`UserName`=#{userName},
			</if>
			<if test="activityCode != null">
				`ActivityCode`=#{activityCode},
			</if>
			<if test="addTime != null">
				`AddTime`=#{addTime},
			</if>
			<if test="status != null">
				`Status`=#{status},
			</if>
		</trim>
		where `Id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from ecuser_customeractivity where `Id`=#{id}
	</delete>

	<!--查询-->
	<select id="getEcuserCustomeractivityByKey" resultMap="ecuserCustomeractivityResultMap" parameterType="java.lang.Integer">
		select `Id`,`UserName`,`ActivityCode`,`AddTime`,`Status` from ecuser_customeractivity where `Id`=#{id}
	</select>

</mapper>
