<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.EdmBuyMarkDao">

	<!--属性-->
	<parameterMap id="edmBuyMarkParameterMap" type="com.yao.yz.kubauser.persistence.model.EdmBuyMark">
		<parameter property="userid"/>
		<parameter property="orderdate"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="edmBuyMarkResultMap" type="com.yao.yz.kubauser.persistence.model.EdmBuyMark">
		<result property="userid" column="userid"/>
		<result property="orderdate" column="orderdate"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="edmBuyMarkParameterMap" keyProperty="userid" useGeneratedKeys="true">
		insert into edm_buy_mark(`userid`,`orderdate`) values(?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="edmBuyMarkParameterMap">
		update edm_buy_mark set
		<trim suffixOverrides=",">
			<if test="orderdate != null">
				`orderdate`=#{orderdate},
			</if>
		</trim>
		where `userid`=#{userid}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from edm_buy_mark where `userid`=#{userid}
	</delete>

	<!--查询-->
	<select id="getEdmBuyMarkByKey" resultMap="edmBuyMarkResultMap" parameterType="java.lang.Integer">
		select `userid`,`orderdate` from edm_buy_mark where `userid`=#{userid}
	</select>

</mapper>
