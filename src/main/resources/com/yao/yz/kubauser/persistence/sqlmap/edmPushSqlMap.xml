<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.EdmPushDao">

	<!--属性-->
	<parameterMap id="edmPushParameterMap" type="com.yao.yz.kubauser.persistence.model.EdmPush">
		<parameter property="userId"/>
		<parameter property="pushEmail"/>
		<parameter property="pushSms"/>
		<parameter property="pushApp"/>
		<parameter property="usePc"/>
		<parameter property="useApp"/>
		<parameter property="pPush"/>
		<parameter property="updateTime"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="edmPushResultMap" type="com.yao.yz.kubauser.persistence.model.EdmPush">
		<result property="userId" column="user_id"/>
		<result property="pushEmail" column="push_email"/>
		<result property="pushSms" column="push_sms"/>
		<result property="pushApp" column="push_app"/>
		<result property="usePc" column="use_pc"/>
		<result property="useApp" column="use_app"/>
		<result property="pPush" column="p_push"/>
		<result property="updateTime" column="update_time"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="edmPushParameterMap" keyProperty="userId" useGeneratedKeys="true">
		insert into edm_push(`user_id`,`push_email`,`push_sms`,`push_app`,`use_pc`,`use_app`,`p_push`,`update_time`) values(?,?,?,?,?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="edmPushParameterMap">
		update edm_push set
		<trim suffixOverrides=",">
			<if test="pushEmail != null">
				`push_email`=#{pushEmail},
			</if>
			<if test="pushSms != null">
				`push_sms`=#{pushSms},
			</if>
			<if test="pushApp != null">
				`push_app`=#{pushApp},
			</if>
			<if test="usePc != null">
				`use_pc`=#{usePc},
			</if>
			<if test="useApp != null">
				`use_app`=#{useApp},
			</if>
			<if test="pPush != null">
				`p_push`=#{pPush},
			</if>
			<if test="updateTime != null">
				`update_time`=#{updateTime},
			</if>
		</trim>
		where `user_id`=#{userId}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from edm_push where `user_id`=#{userId}
	</delete>

	<!--查询-->
	<select id="getEdmPushByKey" resultMap="edmPushResultMap" parameterType="java.lang.Integer">
		select `user_id`,`push_email`,`push_sms`,`push_app`,`use_pc`,`use_app`,`p_push`,`update_time` from edm_push where `user_id`=#{userId}
	</select>

</mapper>
