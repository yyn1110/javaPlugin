<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.LotteryjoinuserDao">

	<!--属性-->
	<parameterMap id="lotteryjoinuserParameterMap" type="com.yao.yz.kubauser.persistence.model.Lotteryjoinuser">
		<parameter property="id"/>
		<parameter property="userName"/>
		<parameter property="ip"/>
		<parameter property="clickCount"/>
		<parameter property="joinTime"/>
		<parameter property="userId"/>
		<parameter property="joinDate"/>
		<parameter property="actType"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="lotteryjoinuserResultMap" type="com.yao.yz.kubauser.persistence.model.Lotteryjoinuser">
		<result property="id" column="Id"/>
		<result property="userName" column="UserName"/>
		<result property="ip" column="Ip"/>
		<result property="clickCount" column="ClickCount"/>
		<result property="joinTime" column="JoinTime"/>
		<result property="userId" column="UserId"/>
		<result property="joinDate" column="JoinDate"/>
		<result property="actType" column="ActType"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="lotteryjoinuserParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into lotteryjoinuser(`Id`,`UserName`,`Ip`,`ClickCount`,`JoinTime`,`UserId`,`JoinDate`,`ActType`) values(?,?,?,?,?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="lotteryjoinuserParameterMap">
		update lotteryjoinuser set
		<trim suffixOverrides=",">
			<if test="userName != null">
				`UserName`=#{userName},
			</if>
			<if test="ip != null">
				`Ip`=#{ip},
			</if>
			<if test="clickCount != null">
				`ClickCount`=#{clickCount},
			</if>
			<if test="joinTime != null">
				`JoinTime`=#{joinTime},
			</if>
			<if test="userId != null">
				`UserId`=#{userId},
			</if>
			<if test="joinDate != null">
				`JoinDate`=#{joinDate},
			</if>
			<if test="actType != null">
				`ActType`=#{actType},
			</if>
		</trim>
		where `Id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from lotteryjoinuser where `Id`=#{id}
	</delete>

	<!--查询-->
	<select id="getLotteryjoinuserByKey" resultMap="lotteryjoinuserResultMap" parameterType="java.lang.Integer">
		select `Id`,`UserName`,`Ip`,`ClickCount`,`JoinTime`,`UserId`,`JoinDate`,`ActType` from lotteryjoinuser where `Id`=#{id}
	</select>

</mapper>
