<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.LotteryuserDao">

	<!--属性-->
	<parameterMap id="lotteryuserParameterMap" type="com.yao.yz.kubauser.persistence.model.Lotteryuser">
		<parameter property="id"/>
		<parameter property="userName"/>
		<parameter property="userId"/>
		<parameter property="goodsName"/>
		<parameter property="goodsId"/>
		<parameter property="lotteryTime"/>
		<parameter property="ip"/>
		<parameter property="actType"/>
		<parameter property="lotteryDate"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="lotteryuserResultMap" type="com.yao.yz.kubauser.persistence.model.Lotteryuser">
		<result property="id" column="Id"/>
		<result property="userName" column="UserName"/>
		<result property="userId" column="UserId"/>
		<result property="goodsName" column="GoodsName"/>
		<result property="goodsId" column="GoodsId"/>
		<result property="lotteryTime" column="LotteryTime"/>
		<result property="ip" column="Ip"/>
		<result property="actType" column="ActType"/>
		<result property="lotteryDate" column="lotteryDate"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="lotteryuserParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into lotteryuser(`Id`,`UserName`,`UserId`,`GoodsName`,`GoodsId`,`LotteryTime`,`Ip`,`ActType`,`lotteryDate`) values(?,?,?,?,?,?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="lotteryuserParameterMap">
		update lotteryuser set
		<trim suffixOverrides=",">
			<if test="userName != null">
				`UserName`=#{userName},
			</if>
			<if test="userId != null">
				`UserId`=#{userId},
			</if>
			<if test="goodsName != null">
				`GoodsName`=#{goodsName},
			</if>
			<if test="goodsId != null">
				`GoodsId`=#{goodsId},
			</if>
			<if test="lotteryTime != null">
				`LotteryTime`=#{lotteryTime},
			</if>
			<if test="ip != null">
				`Ip`=#{ip},
			</if>
			<if test="actType != null">
				`ActType`=#{actType},
			</if>
			<if test="lotteryDate != null">
				`lotteryDate`=#{lotteryDate},
			</if>
		</trim>
		where `Id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from lotteryuser where `Id`=#{id}
	</delete>

	<!--查询-->
	<select id="getLotteryuserByKey" resultMap="lotteryuserResultMap" parameterType="java.lang.Integer">
		select `Id`,`UserName`,`UserId`,`GoodsName`,`GoodsId`,`LotteryTime`,`Ip`,`ActType`,`lotteryDate` from lotteryuser where `Id`=#{id}
	</select>

</mapper>
