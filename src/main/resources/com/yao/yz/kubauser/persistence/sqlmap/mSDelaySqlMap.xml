<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.MSDelayDao">

	<!--属性-->
	<parameterMap id="mSDelayParameterMap" type="com.yao.yz.kubauser.persistence.model.MSDelay">
		<parameter property="id"/>
		<parameter property="ts"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="mSDelayResultMap" type="com.yao.yz.kubauser.persistence.model.MSDelay">
		<result property="id" column="id"/>
		<result property="ts" column="ts"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="mSDelayParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into m_s_delay(`id`,`ts`) values(?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="mSDelayParameterMap">
		update m_s_delay set
		<trim suffixOverrides=",">
			<if test="ts != null">
				`ts`=#{ts},
			</if>
		</trim>
		where `id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from m_s_delay where `id`=#{id}
	</delete>

	<!--查询-->
	<select id="getMSDelayByKey" resultMap="mSDelayResultMap" parameterType="java.lang.Integer">
		select `id`,`ts` from m_s_delay where `id`=#{id}
	</select>

</mapper>
