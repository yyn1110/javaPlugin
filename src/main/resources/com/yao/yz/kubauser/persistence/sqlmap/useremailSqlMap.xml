<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.UseremailDao">

	<!--属性-->
	<parameterMap id="useremailParameterMap" type="com.yao.yz.kubauser.persistence.model.Useremail">
		<parameter property="email"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="useremailResultMap" type="com.yao.yz.kubauser.persistence.model.Useremail">
		<result property="email" column="email"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="useremailParameterMap" keyProperty="email" useGeneratedKeys="true">
		insert into useremail(`email`) values(?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="useremailParameterMap">
		update useremail set
		<trim suffixOverrides=",">
		</trim>
		where `email`=#{email}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="string">
		delete from useremail where `email`=#{email}
	</delete>

	<!--查询-->
	<select id="getUseremailByKey" resultMap="useremailResultMap" parameterType="string">
		select `email` from useremail where `email`=#{email}
	</select>

</mapper>
