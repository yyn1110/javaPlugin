<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.WczOrderDao">

	<!--属性-->
	<parameterMap id="wczOrderParameterMap" type="com.yao.yz.kubauser.persistence.model.WczOrder">
		<parameter property="orderid"/>
		<parameter property="orderdate"/>
		<parameter property="theallmoney"/>
		<parameter property="productcount"/>
		<parameter property="goodsname"/>
		<parameter property="catname"/>
		<parameter property="username"/>
		<parameter property="paymethodname"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="wczOrderResultMap" type="com.yao.yz.kubauser.persistence.model.WczOrder">
		<result property="orderid" column="orderid"/>
		<result property="orderdate" column="orderdate"/>
		<result property="theallmoney" column="theallmoney"/>
		<result property="productcount" column="productcount"/>
		<result property="goodsname" column="goodsname"/>
		<result property="catname" column="catname"/>
		<result property="username" column="username"/>
		<result property="paymethodname" column="paymethodname"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="wczOrderParameterMap">
		insert into wcz_order(`orderid`,`orderdate`,`theallmoney`,`productcount`,`goodsname`,`catname`,`username`,`paymethodname`) values(?,?,?,?,?,?,?,?)
		<!--没有主键-->
	</insert>

	<!--更新-->
	<update id="update" parameterMap="wczOrderParameterMap">
		update wcz_order set
		<trim suffixOverrides=",">
			<if test="orderid != null">
				`orderid`=#{orderid},
			</if>
			<if test="orderdate != null">
				`orderdate`=#{orderdate},
			</if>
			<if test="theallmoney != null">
				`theallmoney`=#{theallmoney},
			</if>
			<if test="productcount != null">
				`productcount`=#{productcount},
			</if>
			<if test="goodsname != null">
				`goodsname`=#{goodsname},
			</if>
			<if test="catname != null">
				`catname`=#{catname},
			</if>
			<if test="username != null">
				`username`=#{username},
			</if>
			<if test="paymethodname != null">
				`paymethodname`=#{paymethodname},
			</if>
		</trim>
		<!--没有主键-->
	</update>

	<!--删除-->
	<!--没有主键-->

	<!--查询-->
	<!--没有主键-->

</mapper>
