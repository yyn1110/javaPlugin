<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.WczUserDao">

	<!--属性-->
	<parameterMap id="wczUserParameterMap" type="com.yao.yz.kubauser.persistence.model.WczUser">
		<parameter property="username"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="wczUserResultMap" type="com.yao.yz.kubauser.persistence.model.WczUser">
		<result property="username" column="username"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="wczUserParameterMap">
		insert into wcz_user(`username`) values(?)
		<!--没有主键-->
	</insert>

	<!--更新-->
	<update id="update" parameterMap="wczUserParameterMap">
		update wcz_user set
		<trim suffixOverrides=",">
			<if test="username != null">
				`username`=#{username},
			</if>
		</trim>
		<!--没有主键-->
	</update>

	<!--删除-->
	<!--没有主键-->

	<!--查询-->
	<!--没有主键-->

</mapper>
