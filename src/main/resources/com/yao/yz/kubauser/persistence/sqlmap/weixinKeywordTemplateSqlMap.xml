<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.WeixinKeywordTemplateDao">

	<!--属性-->
	<parameterMap id="weixinKeywordTemplateParameterMap" type="com.yao.yz.kubauser.persistence.model.WeixinKeywordTemplate">
		<parameter property="id"/>
		<parameter property="keyWordId"/>
		<parameter property="templateId"/>
		<parameter property="inputeDate"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="weixinKeywordTemplateResultMap" type="com.yao.yz.kubauser.persistence.model.WeixinKeywordTemplate">
		<result property="id" column="id"/>
		<result property="keyWordId" column="key_word_id"/>
		<result property="templateId" column="template_id"/>
		<result property="inputeDate" column="inpute_date"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="weixinKeywordTemplateParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into weixin_keyword_template(`id`,`key_word_id`,`template_id`,`inpute_date`) values(?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="weixinKeywordTemplateParameterMap">
		update weixin_keyword_template set
		<trim suffixOverrides=",">
			<if test="keyWordId != null">
				`key_word_id`=#{keyWordId},
			</if>
			<if test="templateId != null">
				`template_id`=#{templateId},
			</if>
			<if test="inputeDate != null">
				`inpute_date`=#{inputeDate},
			</if>
		</trim>
		where `id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from weixin_keyword_template where `id`=#{id}
	</delete>

	<!--查询-->
	<select id="getWeixinKeywordTemplateByKey" resultMap="weixinKeywordTemplateResultMap" parameterType="java.lang.Integer">
		select `id`,`key_word_id`,`template_id`,`inpute_date` from weixin_keyword_template where `id`=#{id}
	</select>

</mapper>
