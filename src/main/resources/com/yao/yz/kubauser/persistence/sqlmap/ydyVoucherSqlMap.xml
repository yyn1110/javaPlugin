<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yao.yz.kubauser.persistence.dao.YdyVoucherDao">

	<!--属性-->
	<parameterMap id="ydyVoucherParameterMap" type="com.yao.yz.kubauser.persistence.model.YdyVoucher">
		<parameter property="id"/>
		<parameter property="voucherId"/>
		<parameter property="status"/>
		<parameter property="createtime"/>
		<parameter property="activeTime"/>
	</parameterMap>

	<!--数据库字段与对象属性映射-->
	<resultMap id="ydyVoucherResultMap" type="com.yao.yz.kubauser.persistence.model.YdyVoucher">
		<result property="id" column="id"/>
		<result property="voucherId" column="voucher_id"/>
		<result property="status" column="status"/>
		<result property="createtime" column="createtime"/>
		<result property="activeTime" column="active_time"/>
	</resultMap>

	<!--新增-->
	<insert id="insert" parameterMap="ydyVoucherParameterMap" keyProperty="id" useGeneratedKeys="true">
		insert into ydy_voucher(`id`,`voucher_id`,`status`,`createtime`,`active_time`) values(?,?,?,?,?)
	</insert>

	<!--更新-->
	<update id="update" parameterMap="ydyVoucherParameterMap">
		update ydy_voucher set
		<trim suffixOverrides=",">
			<if test="voucherId != null">
				`voucher_id`=#{voucherId},
			</if>
			<if test="status != null">
				`status`=#{status},
			</if>
			<if test="createtime != null">
				`createtime`=#{createtime},
			</if>
			<if test="activeTime != null">
				`active_time`=#{activeTime},
			</if>
		</trim>
		where `id`=#{id}
	</update>

	<!--删除-->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from ydy_voucher where `id`=#{id}
	</delete>

	<!--查询-->
	<select id="getYdyVoucherByKey" resultMap="ydyVoucherResultMap" parameterType="java.lang.Integer">
		select `id`,`voucher_id`,`status`,`createtime`,`active_time` from ydy_voucher where `id`=#{id}
	</select>

</mapper>
